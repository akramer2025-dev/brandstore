@echo off
chcp 65001 > nul
echo.
echo ╔═══════════════════════════════════════════════════════════╗
echo ║           🚀 رفع التحديثات إلى Git                       ║
echo ╚═══════════════════════════════════════════════════════════╝
echo.
echo 📋 التحديثات الجديدة:
echo    ✅ إضافة كلمة المرور للشركاء
echo    ✅ حساب تلقائي لنسبة المساهمة
echo.
echo ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
echo.

echo 📂 الملفات المعدلة:
git status --short
echo.

echo ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
echo.
set /p confirm="هل تريد رفع التحديثات؟ (Y/N): "

if /i "%confirm%"=="Y" (
    echo.
    echo 📤 جاري إضافة الملفات...
    git add .
    
    echo.
    echo 💾 جاري الحفظ...
    git commit -m "✨ إضافة كلمة المرور للشركاء وحساب نسبة المساهمة تلقائياً"
    
    echo.
    echo 🚀 جاري الرفع...
    git push
    
    echo.
    echo ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
    echo ✅ تم رفع التحديثات بنجاح!
    echo ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
) else (
    echo.
    echo ❌ تم الإلغاء
)

echo.
pause
